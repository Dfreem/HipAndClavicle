@model ShoppingCartViewModel
@{
    ViewData["Title"] = "Shopping Cart";
    double cartTotal = 00.00d;
    foreach (OrderItem orderItem in Model.ShoppingCartItems)
    {
        cartTotal += (orderItem.PricePerUnit * orderItem.AmountOrdered);
    }
    
    Order newOrder = new()
    {
        Items = Model.ShoppingCart.Items,
        Purchaser = Model.ShoppingCart.Owner!
    };
}

@if (Model.ShoppingCart.Items.Count <= 0)
{
    <p class="text-center">Your shopping cart is empty.</p>
    <br />
    <br />

}
else
{
    <div class="container">
        <div class="table-responsive">
            <div>
                @if (Model.ShoppingCartItems.Count == 1)
                {
                    <h1>@Model.ShoppingCartItems.Count item in cart</h1>
                }
                else if (Model.ShoppingCartItems.Count > 1)
                {
                    <h1>@Model.ShoppingCartItems.Count items in cart</h1>
                }
            </div>
            <table class="table">
                <tbody>
                    @foreach (var item in Model.ShoppingCart.Items)
                    {
                        <tr class="table-borderless">
                            <td>
                                @if (item.Item.ProductImage is not null)
                                {
                                    <img class="img-thumbnail" width="60" src="data:image;base64,@Convert.ToBase64String(item.Item.ProductImage.ImageData)" alt="Product Image" />

                                }
                                else
                                {
                                    <img src="~/images/hp-logo.png" alt="missing image" width="100" />
                                }
                            </td>
                            @*<td><img src="@item.Img" alt="missing image" width="100" /></td>*@
                            <td>
                                <strong>@item.Item.Name</strong><br />
                                @item.Item.Description
                            </td>
                            <td>
                                <form asp-action="UpdateCart" asp-controller="ShoppingCart" method="post">
                                    <label>Quantity:</label>
                                    <input type="hidden" name="itemId" for="itemId" value="@item.ListingItem.OrderItemId" />
                                    <input type="number" name="qty" for="@item.ListingItem.AmountOrdered" value="@item.ListingItem.AmountOrdered" />
                                    <button type="submit" name="submit" class="btn btn-dark">Update</button>
                                </form>
                            </td>
                            <td>
                                <strong>Price Total:</strong> @((item.ListingItem.PricePerUnit * item.ListingItem.AmountOrdered).ToString("C")) <br />
                                @*<em>($@item.ItemPrice each)</em>*@
                            </td>
                            <td>

                                <a asp-action="RemoveFromCart" class="btn btn-dark delete-button" asp-route-itemId="@item.OrderItemId">Delete</a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
        <strong class="float-end">Cart Total: @cartTotal</strong><br />
        <div class="float-start">
            <form asp-action="ClearCart" asp-controller="ShoppingCart" method="post" class="float-start">
                <input type="hidden" name="cartId" value="@Model.ShoppingCart.ShoppingCartId" />
                <button type="submit" class="float-end btn btn-outline-danger" onclick="return confirm('Are you sure you want to clear your entire cart?');">Empty Cart</button>
            </form>
        </div>
        <div class="float-end">
            <a asp-controller="Payment" asp-action="Index" asp-route-order="@newOrder" class="btn btn-dark">Checkout</a>


        </div>
    </div>
}
<script>
    let deletes = document.getElementsByClassName('delete-button');
    for (let i = 0; i < deletes.length; i++) {
        deletes[i].addEventListener("click", () => {
            confirm('Are you sure you want to remove this item from the cart?');
        })
    }
</script>