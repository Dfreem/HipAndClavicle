@model ShippingVM
@{
    ViewData["Title"] = "Shipping";
    double totalPrice = 0;
}
<div class="body">
    <h1>Shipping</h1>
    <hr />
    <div>

        <div class="row">
            <div class="col-md-4 py-2 label-btn">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="card my-2 w-75 mx-auto">
                    <div class="card-header py-1 text-center">
                        Is your address correct?<br />
                    </div>
                    <div class="card-body" id="unhide">
                        @Html.DisplayFor(model => model.Merchant.Address)
                    </div>

                    <a asp-action="Index" asp-controller="Account" class="btn btn-outline-info mx-auto col-4 mb-3">
                        <i class="bi bi-pencil text-warning"></i>
                    </a>
                </div>
                <div class="back-link mt-auto">
                    <a asp-action="CurrentOrders" asp-controller="Admin"><i class="bi bi-chevron-double-left"></i>Back to Orders</a>
                </div>

            </div>
            <div class="col-md-4 border border-dark">
                <h4>Package Details</h4>
                <form asp-action="Ship" method="post">
                    <div class="input-group mb-3">
                        <span class="input-group-text">Weight</span>
                        <input asp-for="ParcelWeight.Weight" class="form-control" />
                        <span asp-validation-for="ParcelWeight.Weight" class="text-danger"></span>
                        <span class="input-group-text">unit</span>
                        <select asp-for="ParcelWeight.UnitOfMeasurement" class="form-control" asp-items="Html.GetEnumSelectList<UnitOfWeight>()"></select>
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text">Height</span>
                        <input asp-for="PackageDimension.Height" class="form-control" />
                        <span asp-validation-for="PackageDimension.Height" class="text-danger"></span>

                        <span class="input-group-text">Width</span>
                        <input asp-for="PackageDimension.Width" class="form-control" />
                        <span asp-validation-for="PackageDimension.Width" class="text-danger"></span>

                    </div>
                    <div class="input-group mb-3">

                        <span class="input-group-text">Length</span>
                        <input asp-for="PackageDimension.Length" class="form-control input-group-item" />

                        <span asp-validation-for="PackageDimension.Length" class="text-danger"></span>
                        <span class="input-group-text">unit</span>
                        <select asp-for="UnitOfMeasure"
                                class="form-control bg-warning-subtle"
                                asp-items="Html.GetEnumSelectList<UnitOfDimension>()">
                        </select>
                    </div>

                    <hr class="my-4" />
                    <h4>Destination Address</h4>
                    @Html.EditorFor(model => model.Customer.Address)
                    <input type="hidden" value="@Model.OrderToShip.OrderId" asp-for="OrderToShip.OrderId" />
                    <input type="submit" value="Create Label" />

                </form>

            </div>


            <div class="col-sm-4">
                <ul class="list-group" style="list-style-type: none;">
                    <li>
                        <ul class="list-group list-group-horizontal text-nowrap">

                            <li class="list-group-item">&emsp;&emsp;</li>
                            <li class="list-group-item"># ordered</li>
                            <li class="list-group-item mx-auto">price / unit</li>
                            <li class="list-group-item ms-auto">price</li>
                        </ul>

                    </li>
                    <li>
                        <hr class="my-0" />

                    </li>
                    <li>
                        @foreach (OrderItem item in Model.OrderToShip.Items)
                        {
                            double itemTotal = item.AmountOrdered * item.PricePerUnit;
                            totalPrice += itemTotal;
                            <ul class="list-group list-group-horizontal">
                                <li class="list-group-item"><b>@item.Item.Name</b></li>
                                <li class="list-group-item me-auto"> @item.AmountOrdered</li>
                                <li class="list-group-item me-auto">@item.PricePerUnit.ToString("C")</li>
                                <li class="list-group-item text-right">@itemTotal.ToString("C")</li>

                            </ul>
                        }

                    </li>
                    <li>
                        <hr />
                        <ul class="list-group list-group-horizontal">
                            <li class="list-group-item">
                                <b>Total</b>
                            </li>

                            <li class="list-group-item ms-auto">
                                @totalPrice.ToString("C")

                            </li>


                        </ul>
                    </li>

                </ul>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
