@model ShippingVM

@{
    ViewData["Title"] = "Shipping";
}

<h1>Shipping</h1>

<h4>Ship</h4>
<hr />
<form asp-action="Shipping">
    <div class="row">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="NewShipment.ShipId" />
            @*            <div class="form-group">
            <label asp-for="NewShipment.APIShippingId" class="control-label"></label>
            <input asp-for="NewShipment.APIShippingId" class="form-control" />
            <span asp-validation-for="NewShipment.APIShippingId" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="ParcelWeight" class="control-label"></label>
                <input asp-for="ParcelWeight" class="form-control" />
                <span asp-validation-for="ParcelWeight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewShipment.Carrier" class="control-label"></label>
                <input disabled asp-for="NewShipment.Carrier" class="form-control" value="USPS" />
            </div>
            <div class="form-group">
                <label asp-for="ParcelWidth" class="control-label"></label>
                <select asp-for="ParcelWidth" class="form-control"></select>
                <span asp-validation-for="ParcelWidth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ParcelHeight" class="control-label"></label>
                <input asp-for="ParcelHeight" class="form-control" />
                <span asp-validation-for="ParcelHeight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnitOfMeasure" class="control-label"></label>
                <select asp-for="UnitOfMeasure"
                        class="form-control"
                        asp-items="Html.GetEnumSelectList<UnitOfDimension>()"></select>
                <span asp-validation-for="UnitOfMeasure" class="text-danger"></span>
                <input hidden asp-for="NewShipment.OrderId" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Make Label" class="btn btn-primary" />
            </div>
        </div>

        <div class="col-md-4 ms-auto">
            <div class="form-group">
                <label asp-for="NewShipment.Notes" class="control-label"></label>
                <textarea rows="4" cols="5" asp-for="NewShipment.Notes" class="form-control"></textarea>
                <span asp-validation-for="NewShipment.Notes" class="text-danger"></span>
            </div>
            <div>
                <div class="text-end mx-5">price</div>
                <ul style="list-style:none;">
                    @foreach (OrderItem item in Model.OrderToShip.Items)
                    {
                        <li>
                            <ul class="list-group list-group-horizontal">
                                <li class="list-group-item"><b>@item.Item.Name</b></li>
                                <li class="list-group-item"> @item.AmountOrdered x @item.PricePerUnit</li>
                                <li class="list-group-item">$@(item.PricePerUnit * item.AmountOrdered)</li>

                            </ul>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</form>
<div>
    <a asp-action="CurrentOrders" asp-action="Admin"><i class="bi bi-chevron-double-left"></i>Back to Orders</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
