@model ProductVM
@{
    ViewData["Title"] = "Add New Product";
}



<div class="d-flex justify-content-center">
    <div class="row">
        <div class="mx-auto">
            <form method="post" asp-action="AddProduct" enctype="multipart/form-data">
                <h2>Add a Product to the lineup</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Name" class="form-control" aria-required="true" />
                    <label asp-for="Name"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                
                <div class="m-3">
                    <select asp-for="Category" asp-items="@Html.GetEnumSelectList<ProductCategory>()">
                    </select>
                </div>

                <div class="m-3">
                    <input class="form-control form-file" type="file" asp-for="ImageFile" />

                </div>
                <div class="d-flex">
                    <select asp-for="ProductColors" multiple class="form-select-sm mx-auto">
                        @foreach (Color color in Model.NamedColors)
                        {
                            <option value="@color" style="background-color:@color.HexValue">@color.ColorName</option>
                        }
                    </select>

                    <select class="form-select-sm mx-auto" asp-for="SetSizes">
                        @foreach (var size in Model.SetSizes)
                        {
                            <option value="@size">@size.Size</option>
                        }

                    </select>
                </div>
                <input type="submit" value="Save"/>
            </form>
        </div>
    </div>
</div>
