@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@{

}

<div>
    @if (SignInManager.IsSignedIn(User))
    {
        <ul>
            <li class="logged-in">
                <a asp-controller="Account" asp-action="Index" asp-route-returnUrl="@Url.Action("Index", "Account")">Hello @User.Identity?.Name!</a>
                <form class="form-inline" method="post" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home")">
                    <button type="submit" class="btn logout">Logout</button>
                </form>
            </li>
            <li>
                <a asp-controller="Color" asp-action="Index">Colors</a>
            </li>
            <li>
                <a asp-controller="Home" asp-action="ContactForm">Contact</a>
            </li>
            <li>
                <a asp-controller="Image" asp-action="Index">Image</a>
            </li>
            <li>
                <a asp-controller="Listing" asp-action="Index">Listings</a>
            </li>
            <li>
                <a asp-controller="Order" asp-action="Index">Orders</a>
            </li>
            <li>
                <a asp-controller="Product" asp-action="Index">Products</a>
            </li>
            <li>
                <a asp-controller="Review" asp-action="Index">Review</a>
            </li>
        </ul>
    }
    else
    {
        <a asp-controller="Account" asp-action="Register">Register</a><br />
        <a asp-controller="Account" asp-action="Login">Login</a>
    }
</div>

