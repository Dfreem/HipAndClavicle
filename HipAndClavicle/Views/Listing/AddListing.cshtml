@{
    ViewData["Title"] = "Add Listing";
}

@model AddListingVM

<style>
    .colorCardChild {
        border: 1px solid black;
    }
    .colorCardChild.selected {
        outline: 4px solid blue;
        outline-offset: 4px;
    }
</style>

<form method="post" asp-action="AddListing">

    <div>
        <label asp-for="@Model.Listing.ListingTitle">Listing Title: </label>
        <input asp-for="@Model.Listing.ListingTitle" />
    </div>

    <div>
        <label asp-for="@Model.Listing.ListingDescription">Listing Description: </label>
        <textarea asp-for="@Model.Listing.ListingDescription"></textarea>
    </div>

    <div class="row col-9 g-4">
        @foreach (var col in Model.AvailableColors)
        {
            <div class="col col-4 colorCard" id="colorCard- @col.ColorName">
                <div class="btn-outline-light card p-4 colorCardChild " style="width: 15rem; background-color: @col.HexValue ;">
                    <label class="btn" for="ColorBtn @col.ColorName" style="background-color: white ;">@col.ColorName</label>
                    <div class="text-center">
                        <input type="checkbox" class="colorCheckBox" id="ColorBtn @col.ColorName" hidden>
                    </div>
                </div>
            </div>

        }
    </div>

    <select asp-for="Listing.ListingProduct"> Product: 
        @foreach (var prod in Model.Products)
        {
            <option value=@prod>@prod.Name</option>
        } 
    </select>

    <label asp-for="@Model.Listing.Images"> Upload images:  </label>
    <input type="file" asp-for="@Model.Listing.Images"/>

    <button type="submit">Add</button>
</form>


<script>
    //function selectCard(){
    //    this.classList.toggle('selected');
    //}
    var cards = document.querySelectorAll('.colorCard');
    cards.forEach(function(card){
        card.addEventListener('click', function(){
            this.classList.toggle('selected');
            var theid = this.getAttribute("id");
            console.log(theid);
            var colorCardChild = this.querySelector('.colorCardChild');
            var box = this.querySelector('.colorCheckBox');
            var boxId = box.getAttribute("id");
            console.log(boxId);
            if (box.checked){
                box.checked = false;
                colorCardChild.classList.remove('selected');
            }
            else {
                box.checked = true;
                colorCardChild.classList.add('selected');
            }
        })
    })
</script>