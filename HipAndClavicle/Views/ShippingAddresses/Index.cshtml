@model AppUser

@{
    ViewData["Title"] = "Details";
}

<h2>

    @User.Identity.Name
</h2>
<div class="row justify-content-center mb-4">
    <div class="col-12">
        <div class="card shadow-lg">
            <div class="card-body">
                <div class="row">
                    <div class="col-6">
                        <h4>Profile</h4>
                        <hr />
                        <dl class="row">
                            <dt class="col-sm-6">
                                @Html.DisplayNameFor(model => model.FName)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.FName)
                            </dd>
                            <dt class="col-sm-6">
                                @Html.DisplayNameFor(model => model.LName)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.LName)
                            </dd>
                            <dt class="col-sm-6">
                                @Html.DisplayNameFor(model => model.UserName)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.UserName)
                            </dd>
                            <dt class="col-sm-6">
                                @Html.DisplayNameFor(model => model.PhoneNumber)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.PhoneNumber)
                            </dd>
                            <dt class="col-sm-6">
                                @Html.DisplayNameFor(model => model.Email)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Email)
                            </dd>

                        </dl>
                    </div>
                    <div class="col-6">
                        <div>
                            <h4>ShippingAddress</h4>
                            <hr />
                            <dl class="row">
                                <dt class="col-sm-6">
                                    @Html.DisplayNameFor(model => model.Address.AddressLine1)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Address.AddressLine1)
                                </dd>
                                <dt class="col-sm-6">
                                    @Html.DisplayNameFor(model => model.Address.AddressLine2)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Address.AddressLine2)
                                </dd>
                                <dt class="col-sm-6">
                                    @Html.DisplayNameFor(model => model.Address.Country)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Address.Country)
                                </dd>
                                <dt class="col-sm-6">
                                    @Html.DisplayNameFor(model => model.Address.PhoneNumber)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Address.PhoneNumber)
                                </dd>
                                <dt class="col-sm-6">
                                    @Html.DisplayNameFor(model => model.Address.CityTown)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Address.CityTown)
                                </dd>
                                <dt class="col-sm-6">
                                    @Html.DisplayNameFor(model => model.Address.StateAbr)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Address.StateAbr)
                                </dd>
                                <dt class="col-sm-6">
                                    @Html.DisplayNameFor(model => model.Address.PostalCode)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Address.PostalCode)
                                </dd>
                                <dt class="col-sm-6">
                                    @Html.DisplayNameFor(model => model.Address.Residential)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Address.Residential)
                                </dd>
                            </dl>
                        </div>

                    </div>

                </div>

            </div>
        </div>
    </div>


</div>
