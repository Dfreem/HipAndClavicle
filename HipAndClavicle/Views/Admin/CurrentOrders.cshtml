@model MerchantVM
@{
}

<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css" />
<link rel="stylesheet" href="/css/site.css" />
<link rel="stylesheet" href="/css/Order.css" />

<label class="h4 mx-5 text-secondary font-weight-bold ">Current Orders</label>
<div class="body">

    @* -- Current Orders -- *@


    <div class="current-orders">
        @foreach (Order order in Model.CurrentOrders)
        {
            @Html.DisplayFor(_ => order)
        }

    </div>

    @*end current orders*@


    @* -- shipped orders --*@

    @if (Model.ShippedOrders.Count > 0)
    {
        @Html.DisplayFor(model => model.ShippedOrders)
    }
    else
    {
        <div class="m-auto col-4">
            <h4 class="text-muted">No orders have been shipped</h4>
        </div>
    }
</div>

@* end shipped orders*@

