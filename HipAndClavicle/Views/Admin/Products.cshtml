@model MerchantVM
@{
    ViewData["Title"] = "Product management";
}

<div class="product-list-view">

    @foreach (var product in Model.Products)
    {
        @Html.DisplayFor(_ => product)
    }

</div>

<a asp-action="AddProduct" asp-controller="Product" class="btn btn-primary">Add<i class="bi bi-add"></i></a> a new Product to the lineup

