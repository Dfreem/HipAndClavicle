@model MerchantVM
@{
    ViewData["Title"] = "Product management";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<link rel="stylesheet" href="~/css/Products.css" />
<div class="product-list-view">


    <a asp-action="AddProduct" asp-controller="Product" class="sticky-lg-top">
        <img src="~/images/butterfly_icon.png" class="align-content-center" />
        <br />
        Add a Product
    </a>


    <div class="container d-flex flex-row flex-wrap m-lg-5">
        @foreach (var product in Model.Products)
        {
            <div class="col">
                @Html.DisplayFor(_ => product)
            </div>
            <div class="offcanvas offcanvas-start" tabindex="-1" id="edit-modal" aria-labelledby="offcanvasExampleLabel">
                <div class="offcanvas-header">
                    <h5 class="offcanvas-title" id="offcanvasExampleLabel">@product.Name</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>

                <!--Modal product edit window-->
                <div class="offcanvas-body">
                    <div>
                        <form method="post" asp-action="EditProduct" asp-controller="Product">
                            <div class="card mx-auto card-top">
                                <div class="my-auto">
                                    @if (product.ProductImage is not null)
                                    {
                                        <img class="card-img-top img-fluid" width="@product.ProductImage!.Width" src="data:image;base64,@Convert.ToBase64String(product.ProductImage.ImageData)" alt="Product Image" id="img-@product.ProductId">
                                    }
                                    else
                                    {
                                        <img src="https://placeholder.com/100" class="card-img-top" id="img-@product.ProductId" />
                                    }

                                </div>

                                <div class="card-body">
                                    <div class="card-header">
                                        <div class="input-group-sm">
                                            <input asp-for="@product.Name" class="form-control" type="text" id="name-@product.ProductId" />
                                        </div>
                                    </div>
                                    @if (product.Description != "")
                                    {
                                        <span class="card-text">@product.Description</span>
                                    }
                                    else
                                    {
                                        <span class="card-text text-alert-warning text-bg-dark">No description</span>
                                    }
                                </div>
                            </div>
                            <br />
                            <div class="input-group-sm">
                                <span class="form-text">Edit Image</span>
                                <input asp-for="@product.TempFile" type="file" id="@product.ProductId" />

                            </div>
                            <input type="submit" class="btn btn-outline-success rounded-4 m-3" value="save" />

                        </form>
                    </div>

                </div>
                <script>
                    const cardImage = document.getElementById('img-@product.ProductId')
                    const cardInput = document.getElementById('@product.ProductId')
                    cardInput.onchange = () => {
                        cardImage.src = URL.createObjectURL(cardInput.files[0]);
                    };
                </script>
            </div>
        }
    </div>


</div>